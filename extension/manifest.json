{
  "manifest_version": 3,
  "name": "Filter out Stupidity",
  "version": "1.0",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting", 
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/filter:filter:template.os/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}